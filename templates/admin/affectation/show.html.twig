{% extends './admin/adminbase.html.twig' %}
{% set page_title =  affectation.agent.identification.prenom %}

{% block title %}Affectation{% endblock %}

{% block body %}
    <div class="page-header">
        {% include '/admin/partials/_page_header_partials.html.twig' %}
    </div>
    <div class="card">
		<div class="card-header">
            <div class="d-flex gap-3 justify-content-end">
                <a class="btn btn-secondary rounded-pill " href="{{ path('app_admin_affectation_index') }}"><i class="fa fa-home"></i> Retour</a>
                <a class="btn btn-warning rounded-pill" href="{{ path('app_admin_affectation_edit', {'id': affectation.id}) }}"><i class="fa fa-edit"></i> Modifier</a>
                <form action="{{ path('app_admin_affectation_delete', {id:affectation.id})}}" method="POST">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ affectation.id) }}">
                    <button type="submit" class="btn btn-danger rounded-pill"><i class="fa fa-trash-alt"></i> Supprimer</button>
                </form>
            </div>
		</div>
		<div class="card-body">
			<ul class="nav nav-pills nav-secondary nav-pills-no-bd" id="pills-tab-without-border" role="tablist">
				<li class="nav-item">
					<a class="nav-link active" id="pills-home-tab-nobd" data-bs-toggle="pill" href="#pills-home-nobd" role="tab" aria-controls="pills-home-nobd" aria-selected="true">Informations</a>
				</li>
			</ul>
			<div class="tab-content mt-2 mb-3" id="pills-without-border-tabContent">
                <div class="tab-pane fade show active" id="pills-home-nobd" role="tabpanel" aria-labelledby="pills-home-tab-nobd">
                    <div class="row row-demo-grid">
                      <div class="col-md-6 ms-auto me-auto">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ affectation.agent.identification.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ affectation.agent.identification.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Sexe</th>
                                    <td>{{ affectation.agent.identification.sexe }}</td>
                                </tr>
                                <tr>
                                    <th>Matricule </th>
                                    <td>{{ affectation.agent.matricule }}</td>
                                </tr>
                                <tr>
                                    <th>Poste </th>
                                    <td>{{ affectation.poste.nomPoste }}</td>
                                </tr>
                                <tr>
                                    <th>Service </th>
                                    <td>{{ affectation.service.description }}</td>
                                </tr>
                            </tbody>
                        </table>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
