<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>{% block title %}E-Suivi{% endblock %}</title>
        <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('assets/css/bootstrap.min.css')}}">
            <link rel="stylesheet" href="{{asset('assets/css/plugins.min.css')}}">
            <link rel="stylesheet" href="{{asset('assets/css/kaiadmin.min.css')}}">
            <link rel="shortcut icon" href="{{asset('assets/img/kaiadmin/favicon.ico')}}" type="image/x-icon">
        {% endblock %}

    </head>
    <body>
        <div class="wrapper">
            <!-- Sidebar -->
            <div class="sidebar" data-background-color="dark">
                {% include '/admin/partials/_sidebar_partials.html.twig' %}
            </div>
            <!-- End Sidebar -->

            <div class="main-panel">
                <div class="main-header">
                    <div class="main-header-logo">
                        {% include '/admin/partials/_logo_header_partials.html.twig' %}
                    </div>
                    <!--Navbar Header-->
                    <nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
                        {% include '/admin/partials/_navbar_partials.html.twig' %}
                    </nav>
                    <!--End Navbar-->
                </div>
                <div class="container">
                    <div class="page-inner">
                        {% block body %}{% endblock %}
                    </div>
                </div>
                <footer class="footer">
                    {% include '/admin/partials/_footer_partials.html.twig' %}
                </footer>
            </div>
        </div>

        {% block javascripts %}
            <script src="{{asset('assets/js/plugin/webfont/webfont.min.js')}}"></script>
            <script src="{{asset('assets/js/custom_fontawesome.js')}}"></script>
            <script>
              WebFont.load({
                google: { families: ["Public Sans:300,400,500,600,700"] },
                custom: {
                  families: [
                    "Font Awesome 5 Solid",
                    "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands",
                    "simple-line-icons",
                  ],
                  urls: ["{{asset('assets/css/fonts.min.css')}}"],
                },
                active: function () {
                  sessionStorage.fonts = true;
                },
              });
            </script>

            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <!-- Core JS Files -->
            <script src="{{asset('assets/js/core/jquery-3.7.1.min.js')}}"></script>
            <script src="{{asset('assets/js/core/popper.min.js')}}"></script>
            <script src="{{asset('assets/js/core/bootstrap.min.js')}}"></script>

            <!-- jQuery Scrollbar -->
            <script src="{{asset('assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js')}}"></script>



            <!-- Datatables -->
            <script src="{{asset('assets/js/plugin/datatables/datatables.min.js')}}"></script>
            <script src="{{ asset('assets/js/plugin/datatables/add-row.js') }}"></script>

            <!-- Bootstrap Notify -->
            <script src="{{asset('assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js')}}"></script>

            <!-- Sweet Alert -->
            <script src="{{asset('assets/js/plugin/sweetalert/sweetalert.min.js')}}"></script>

            <!-- KaiAdmin JS -->
            <script src="{{asset('assets/js/kaiadmin.min.js')}}"></script>


        {% endblock %}
    </body>
</html>
