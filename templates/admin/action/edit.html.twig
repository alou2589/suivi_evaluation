{% extends './admin/adminbase.html.twig' %}
{% set page_title = 'Action' %}

{% block title %}Cr√©er un nouveau Action{% endblock %}

{% block body %}
    <div class="page-header">
        {% include '/admin/partials/_page_header_partials.html.twig' %}
    </div>
    <div class="row">
        <div class="col-md-12">
           <div class="card">
                <div class="card-header">
                    <div class="card-title">Ajouter Programme</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            {{ form_start(form, {'attr':{'class':'form'}}) }}
                            <div class="form-group form-group-default">
                                {{form_row(form.nom_action, {'attr': {'class': 'form-control', 'placeholder':'Nom de l\'action...','id':'nomAction', 'required':'required' }}) }}
                            </div>
                            <div class="form-group form-group-default">
                                {{form_row(form.programme, {'attr': {'class': 'form-control js-example-basic-single', 'placeholder':'programme ...','id':'programme', 'required':'required' }}) }}
                            </div>
                            <div class="form-group form-group-default">
                                {{form_row(form.responsable_action, {'attr': {'class': 'form-control js-example-basic-single', 'placeholder':'Responsable de l\'action...','id':'responsableAction', 'required':'required' }}) }}
                            </div>
                            <div class="form-group form-group-default">
                                {{form_row(form.cout_action, {'attr': {'class': 'form-control','id':'coutAction', 'required':'required' }}) }}
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-secondary">Modifer</button>
                                <a class="btn btn-danger" href="{{ path('app_admin_action_index') }}">Annuler</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
