{% extends './admin/adminbase.html.twig' %}
{% set page_title = 'Poste' %}

{% block title %}Poste{% endblock %}

{% block body %}
    <div class="page-header">
        {% include '/admin/partials/_page_header_partials.html.twig' %}
    </div>
    <div class="row">
        <div class="col-md-12">
           <div class="card">
                <div class="card-header">
                    <div class="card-title">Modifier poste</div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            {{ form_start(form, {'attr':{'class':'form'}}) }}
                            <div class="form-group form-group-default">
                                {{form_row(form.nom_poste, {'attr': {'class': 'form-control', 'placeholder':'Nom de la poste...','id':' nomPoste', 'required':'required' }}) }}
                            </div>
                            <div class="form-group form-group-default">
                                {{form_row(form.description, {'attr': {'class': 'form-control','id':'comment', 'required':'required' }}) }}
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-secondary">Modifier</button>
                                <a class="btn btn-danger" href="{{ path('app_admin_poste_index') }}">Annuler</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
