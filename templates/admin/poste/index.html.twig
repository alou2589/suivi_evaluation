{% extends 'admin/adminbase.html.twig' %}
{% set page_title = 'Poste' %}

{% block title %}Poste{% endblock %}

{% block body %}
    <div class="page-header">
        {% include '/admin/partials/_page_header_partials.html.twig' %}
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                  <div class="d-flex align-items-center">
                    <h4 class="card-title">Liste des postes</h4>
                    <a href="{{ path('app_admin_poste_create') }}" data-original-title="Add New Row"  data-placement="left"  title="Nouvelle poste" class="rounded-pill btn btn-black btn-lg ms-auto" >
                      <i class="fa fa-plus"></i>
                      Ajouter
                    </a>
                  </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="display table table-striped table-hover" id="basic-datatables">
                            <thead>
                                <tr>
                                    <th class="text-center">Poste</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                {% for poste in postes %}
                                    <tr>
                                        <td class="text-center">{{ poste.nomPoste }}</td>
                                        <td class="text-center">
                                          <a href="{{ path('app_admin_poste_show', {'id': poste.id}) }}" class="btn"> <i class="fa fa-eye text-primary"></i></a>
                                          <a href="{{ path('app_admin_poste_edit', {'id': poste.id}) }}" class="btn"> <i class="fa fa-edit text-secondary"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}





