{% extends 'admin/adminbase.html.twig' %}
{% set page_title = 'Service' %}

{% block title %}Service{% endblock %}

{% block body %}
    <div class="page-header">
        {% include '/admin/partials/_page_header_partials.html.twig' %}
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Liste des services</h4>
                        <a href="{{ path('app_admin_service_create') }}" data-original-title="Add New Row"  data-placement="left"  title="Nouvelle direction" class="rounded-pill btn btn-black btn-lg ms-auto" >
                          <i class="fa fa-plus"></i>
                          Ajouter
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="display table table-striped table-hover"  id="basic-datatables">
                            <thead>
                                <tr>
                                    <th class="text-center">Service</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for service in services %}
                                <tr>
                                    <td class="text-center">{{ service.nomService }}</td>
                                    <td class="text-center">
                                          <a href="{{ path('app_admin_service_show', {'id': service.id}) }}" class="btn"> <i class="fa fa-eye text-primary"></i></a>
                                          <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="btn"> <i class="fa fa-edit text-secondary"></i></a>
                                        </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2">Pas d'enregistrement effectu√©</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
