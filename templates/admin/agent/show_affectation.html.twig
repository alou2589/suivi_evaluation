<div class="row row-demo-grid">
    <div class="col-md-12 ms-auto me-auto">
        {% if lastAffectation %}
            <table class="table">
                <tbody>
                    <tr>
                        <th>Poste</th>
                        <td>{{ lastAffectation.poste.nomPoste }}</td>
                    </tr>
                    <tr>
                        <th>Service</th>
                        <td>{{ lastAffectation.service.description }}</td>
                    </tr>
                </tbody>
            </table>
        {% else %}
            <div class="alert alert-warning" role="alert">
                <strong>Aucune affectation trouv√©e pour cet agent.</strong> <br>
                Voulez-vous ajouter une nouvelle affectation ?
                <a href="{{ path('app_admin_affectation_create') }}" data-original-title="Add New Row"  data-placement="left"  title="Nouvel agent" class="rounded-pill btn btn-black btn-lg ms-auto" >
                      <i class="fa fa-plus"></i>
                      Ajouter
                </a>
            </div>
        {% endif %}
    </div>
</div>
