
{% extends 'admin/adminbase.html.twig' %}
{% set page_title = 'Agent' %}

{% block title %}Agent{% endblock %}

{% block body %}
    <div class="page-header">
        {% include '/admin/partials/_page_header_partials.html.twig' %}
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                  <div class="d-flex align-items-center">
                    <h4 class="card-title">Liste des agents</h4>
                    <a href="{{ path('app_admin_agent_create') }}" data-original-title="Add New Row"  data-placement="left"  title="Nouvel agent" class="rounded-pill btn btn-black btn-lg ms-auto" >
                      <i class="fa fa-plus"></i>
                      Ajouter
                    </a>
                  </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="display table table-striped table-hover" id="basic-datatables">
                            <thead>
                                <tr>
                                    <th>Prenom</th>
                                    <th>Nom</th>
                                    <th>Matricule</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for agent in agents %}
                                <tr>
                                    <td>{{ agent.identification.prenom }}</td>
                                    <td>{{ agent.identification.nom }}</td>
                                    <td>{{ agent.matricule }}</td>
                                    <td>
                                        <a href="{{ path('app_admin_agent_show', {'id': agent.id}) }}"> <i class="fa fa-eye text-primary" aria-hidden="true"></i>  </a>
                                        <a href="{{ path('app_admin_agent_edit', {'id': agent.id}) }}"> <i class="fa fa-edit text-secondary" aria-hidden="true"></i>  </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
