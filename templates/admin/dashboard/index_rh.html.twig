{% extends 'admin/adminbase.html.twig' %}
{% set page_title = 'Tableau de Bord RH' %}

{% block title %}Ressources Humaines{% endblock %}

{% block body %}
    <div class="page-header">
        {% include '/admin/partials/_page_header_partials.html.twig' %}
    </div>
            <!-- Card With Icon States Background -->
            <div class="row">
              <div class="col-sm-6 col-md-3">
                <div class="card card-stats card-round">
                  <div class="card-body">
                    <div class="row align-items-center">
                      <div class="col-icon">
                        <div
                          class="icon-big text-center icon-primary bubble-shadow-small"
                        >
                          <i class="fas fa-users"></i>
                        </div>
                      </div>
                      <div class="col col-stats ms-3 ms-sm-0">
                        <div class="numbers">
                          <p class="card-category">Personnel</p>
                          <h4 class="card-title">{{ nbAgents }}</h4>
                        </div>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="numbers">
                                <h4> <i class="fas fa-male fa-3xs text-primary"></i> {{ nbHommes }}</h4>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="numbers">
                                <h4> <i class="fas fa-female fa-3xs text-secondary"></i> {{ nbFemmes }}</h4>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-md-3">
                <div class="card card-stats card-round">
                  <div class="card-body">
                    <div class="row align-items-center">
                      <div class="col-icon">
                        <div
                          class="icon-big text-center icon-info bubble-shadow-small"
                        >
                          <i class="fas fa-folder"></i>
                        </div>
                      </div>
                      <div class="col col-stats ms-3 ms-sm-0">
                        <div class="numbers">
                          <p class="card-category">Documents</p>
                          <h4 class="card-title">{{ nbDocs }}</h4>
                        </div>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="numbers">
                                <h4> <i class="fas fa-file-pdf fa-3xs text-primary"></i> {{ nbPDF }}</h4>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="numbers">
                                <h4> <i class="fas fa-file-alt fa-3xs text-primary"></i> {{ nbDOCX }}</h4>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-md-3">
                <div class="card card-stats card-round">
                  <div class="card-body">
                    <div class="row align-items-center">
                      <div class="col-icon">
                        <div
                          class="icon-big text-center icon-success bubble-shadow-small"
                        >
                          <i class="fas fa-briefcase"></i>
                        </div>
                      </div>
                      <div class="col col-stats ms-3 ms-sm-0">
                        <div class="numbers">
                          <p class="card-category">Direction</p>
                          <h4 class="card-title">{{ nbDirections }}</h4>
                        </div>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="numbers">
                                <h4> <i class="fas fa-building fa-3xs text-primary" title="Direction"></i> {{ nbTypeDirection }}</h4>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="numbers">
                                <h4> <i class="fas fa-store fa-3xs text-secondary" title="Agence"></i> {{ nbTypeAgence }}</h4>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="numbers">
                                <h4> <i class="fas fa-industry fa-3xs text-default" title="Projets"></i> {{ nbTypeProjets }}</h4>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-sm-6 col-md-3">
                <div class="card card-stats card-round">
                  <div class="card-body">
                    <div class="row align-items-center">
                      <div class="col-icon">
                        <div
                          class="icon-big text-center icon-secondary bubble-shadow-small"
                        >
                          <i class="far fa-building"></i>
                        </div>
                      </div>
                      <div class="col col-stats ms-3 ms-sm-0">
                        <div class="numbers">
                          <p class="card-category">Service</p>
                          <h4 class="card-title">{{ nbServices }}</h4>
                        </div>
                      </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="numbers">
                                <h4> <i class="fas fa-building fa-3xs text-primary" title="Service"></i> {{ nbDocs }}</h4>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="numbers">
                                <h4> <i class="fas fa-city fa-3xs text-primary" title="Cellule"></i> {{ nbDocs }}</h4>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
{% endblock %}
